<!-- 可用组件：https://mp.weixin.qq.com/debug/wxadoc/dev/component/ -->
<view class="payorder">
  <view class="restaurant">
    人马科技大饭堂
  </view>

  <view class="ocunt">
    <text>已点{{ allCount }}个菜</text>
    <text>订单号{{ numbers }}</text>
  </view>
  <view class="orderList">
    <view class="time">
      下单时间:{{ time }}
    </view>
    <view class="orderList-item">
      <view class="orderList-item-top">
        <text>菜品</text>
        <text>数量</text>
        <text>金额</text>
      </view>

      <view class="orderList-item-one" wx:for="{{ shows }}">
        <text>{{ item.name  }}</text>
        <text>{{ item.numbers }}</text>
        <text>{{ item.price }}</text>
      </view>

      <view class="orderList-item-one">
         <text>桌号</text> 
        <text>{{ table }}</text>
      </view>

    </view>
    <view class="bottom">
      <text>总价</text>
      <text>{{ momey }}</text>
    </view>
  </view>
  <view class="tip">实付金额以买单时为准</view>
  <view bindtap="payMoney" class="start-pay">去付款</view>
</view>
